@model IEnumerable<ETSU.CampusTour.SharedLibrary.Models.Building>
@{
    ViewData["Title"] = "Home Page";
}


<html>  
    <!--Created By: Isaiah Jayne-->
    <!--Creation Date: 2/22/2023 12:24 AM-->
    <!--Last Modified: 2/27/2023 10:12 PM-->

    <body>    

        <!--This is the Map view page for the webapp. This page contains an interactive map that shows the user the route and buildings along a tour
            There is also a list of the locations visited along the tour below the map. The list items can be clicked to view them on the map. 
        -->

        <div class="sticky-top" id="header">
            <span class="headerText">ETSU - Map</span>
        </div>
        <h6 class="text-center">Est. time to complete: 2 hours</h6>
        <div id="Map" class="tabcontent"> <!--This is where the google maps api thing is embedded into the page-->
            <div class="text-center">
                <iframe src="https://www.google.com/maps/embed?pb=!1m64!1m8!1m3!1d3215.366203024067!2d-82.3692879!3d36.3034255!3m2!1i1024!2i768!4f13.1!4m53!3e2!4m5!1s0x885a7cc03e6ac125%3A0xbf01f4b198fb8730!2sRoy%20Nicks%20Hall%2C%20365-441%20Stout%20Dr%2C%20Johnson%20City%2C%20TN%2037604!3m2!1d36.3025449!2d-82.3677649!4m5!1s0x885a7de6b2ad10bb%3A0x12187c8c02ad3d7a!2sRogers-Stout%20Hall%2C%20Stout%20Drive%2C%20Johnson%20City%2C%20TN!3m2!1d36.3032815!2d-82.366176!4m5!1s0x885a7cea93eaf94f%3A0x76ff5cc954ed9527!2sCharles%20C.%20Sherrod%20Library%2C%20J%20L%20Seehorn%20Junior%20Road%2C%20Johnson%20City%2C%20TN!3m2!1d36.302535299999995!2d-82.3657729!4m5!1s0x885a7ceaa5115849%3A0x9744da3bce7bcc94!2sThe%20D.%20P.%20Culp%20Student%20Center%2C%20J%20L%20Seehorn%20Junior%20Road%2C%20Johnson%20City%2C%20TN!3m2!1d36.3013829!2d-82.36669859999999!4m5!1s0x885a7c94ca70f753%3A0x18d09161fc9d5db1!2sETSU%20Basler%20Center%20for%20Physical%20Activity%2C%20Jack%20Vest%20Drive%2C%20Johnson%20City%2C%20TN!3m2!1d36.299892799999995!2d-82.3741747!4m5!1s0x885a7cc0e1b290eb%3A0x9e965440f2ecc7a7!2sETSU%2FBallad%20Health%20Athletic%20Center!3m2!1d36.3038679!2d-82.3708415!4m5!1s0x885a7d29e994f1e7%3A0xb378b92d578d40cd!2sETSU%20Martin%20Center%20for%20the%20Arts!3m2!1d36.3046015!2d-82.37191969999999!4m5!1s0x885a7cc184c5919f%3A0xc797c70c17d38574!2sETSU%20Millennium%20Center!3m2!1d36.3056863!2d-82.37118699999999!4m3!3m2!1d36.302438099999996!2d-82.36800579999999!5e0!3m2!1sen!2sus!4v1675097504108!5m2!1sen!2sus" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>  

        <div id="ListTop" class="ListHeader"> <!--Header for the Building list-->
            <h3><span class="ListHeaderText">List of Main Buildings</span></h3>
        </div>

        <div id="ButtonList" class="BuildingList"> <!--List of buttons that correspond to the buildings along the tour-->
            <ul style="list-style-type:none">

                <!--
                <li><button class="BuildingMapButton">1. Roy S. Nicks Hall</button></li>
                <li><button class="BuildingMapButton">2. Rogers-Stout Hall</button></li>
                <li><button class="BuildingMapButton">3. Sherrod Library</button></li>
                <li><button class="BuildingMapButton">4. The D.P. Culp Student Center</button></li>
                <li><button class="BuildingMapButton">5. ETSU Basler CP</button></li>
                <li><button class="BuildingMapButton">6. ETSU/Ballad Health Athletic Center</button></li>
                <li><button class="BuildingMapButton">7. ETSU Martin Center for the Arts</button></li>
                <li><button class="BuildingMapButton">8. ETSU Millenium Center</button></li>
                -->
                
                @foreach(var building in Model)
                {
                    <li><button class="BuildingMapButton">@building.Building_Name</button></li>
                }
            </ul>
        </div>
    <footer class="footer mt-auto">
        <div class="container text-center">
            <div class="row align-items-end">
                <div class="col btn-outline">
                    <a asp-area="" asp-controller="Building" asp-action="Index">
                        <svg xmlns="http://www.w3.org/2000/svg" width="50" height="37" fill="#FFC425" class="bi bi-list-check" viewBox="0 0 25 25">
                            <path fill-rule="evenodd" d="M5 11.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3.854 2.146a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 1 1 .708-.708L2 3.293l1.146-1.147a.5.5 0 0 1 .708 0zm0 4a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 1 1 .708-.708L2 7.293l1.146-1.147a.5.5 0 0 1 .708 0zm0 4a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 0 1 .708-.708l.146.147 1.146-1.147a.5.5 0 0 1 .708 0z" />
                        </svg>
                    </a>
                </div>
                <div class="col btn-outline">
                    <a asp-area="" asp-controller="Home" asp-action="Landing">
                        <svg xmlns="http://www.w3.org/2000/svg" width="50" height="37" fill="#FFC425" class="bi bi-house-fill" viewBox="0 0 25 25">
                            <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L8 2.207l6.646 6.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.707 1.5Z" />
                            <path d="m8 3.293 6 6V13.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5V9.293l6-6Z" />
                        </svg>
                    </a>
                </div>
                <div class="col btn-outline">
                    <a asp-area="" asp-controller="Map" asp-action="Index">
                        <svg xmlns="http://www.w3.org/2000/svg" width="50" height="37" fill="#FFC425" class="bi bi-geo-alt" viewBox="0 0 25 25">
                            <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z" />
                            <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>