@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" />
<div class="dropdown-example">
    <div class="select-menu">
        <div class="select-btn">
            <span class="dropdown-title">Roy S. Nicks Hall</span><i class="fas fa-caret-down"></i>
            <i class="bx bx-chevron-down"></i>
        </div>

        <ul class="options">
            <li class="option">
                <span class="option-text">Primarily houses the College of Nursing at ETSU. The building is named after Roy S. Nicks who is an alumni of ETSU and a former Tennessee state senator.</span>
            </li>
        </ul>
    </div>
</div>
<script>
    const optionMenu = document.querySelector(".select-menu"),
    selectBtn = optionMenu.children[0],
    options = optionMenu.children[1].children,
    dropdownTitleText = optionMenu.children[2];

    selectBtn.addEventListener("click", () =>
        optionMenu.classList.toggle("active")
    );

    options.forEach((option) => {
        option.addEventListener("click", () => {
        let selectedOption = option.querySelector(".option-text").innerText;
        dropdownTitleText.innerText = selectedOption;

        optionMenu.classList.remove("active");
       });
    });
</script>