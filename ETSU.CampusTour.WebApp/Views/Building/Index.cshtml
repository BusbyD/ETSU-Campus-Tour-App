@model IEnumerable<ETSU.CampusTour.SharedLibrary.Models.Building>
@{
    ViewData["Title"] = "Building";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Building</h1>
<h1>Standard Tour</h1>
<table class="table">
    <thead>
        <tr>
            <th>Building Id</th>
            <th>Building Name</th>
            <th>Building Description</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var building in Model)
        {
            <tr>
                <td>@building.Building_Id</td>
                <td>@building.Building_Name</td>
                <td>@building.Building_Description</td>
                
            </tr>
        }
    </tbody>
</table>
@foreach (var building in Model)
{
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" />
<div class="dropdown-example">
    <div class="select-menu" id="dropdown1">
        <div class="select-btn">
            <span class="dropdown-title">@building.Building_Name</span><i class="fas fa-caret-down"></i>
            <i class="bx bx-chevron-down"></i>
        </div>

        <ul class="options">
            <li class="option">
                <span class="option-text">@building.Building_Description</span>
            </li>
        </ul>
    </div>
</div>

}
<script>initDropdowns();

    function initDropdowns() {
        const optionMenu = document.querySelectorAll(".select-menu");
        optionMenu.forEach(dropdown => {
            const selectBtn = dropdown.children[0],
                options = dropdown.children[1].children,
                dropdownTitleText = dropdown.children[2];
            selectBtn.addEventListener("click", () =>
                dropdown.classList.toggle("active")
            );
        });

    }</script>